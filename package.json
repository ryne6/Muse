{
  "name": "crow",
  "version": "0.0.6",
  "description": "AI-powered desktop chat agent with multi-provider support",
  "main": "./out/main/index.js",
  "author": "ryne6",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start:api": "bun src/api/index.ts",
    "start:dev": "./start-dev.sh",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "typecheck:watch": "tsc --noEmit --watch",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:backup": "sqlite3 crow.db \".dump\" > backups/crow-$(date +%Y%m%d-%H%M%S).sql",
    "clean": "rm -rf out dist node_modules/.vite",
    "clean:db": "rm -f crow.db crow.db-wal crow.db-shm",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:main": "vitest -c vitest.config.main.mts",
    "test:renderer": "vitest -c vitest.config.renderer.mts",
    "test:api": "vitest -c vitest.config.api.mts",
    "test:watch": "vitest --watch",
    "analyze": "ANALYZE=true electron-vite build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "axios": "^1.13.2",
    "better-sqlite3": "^9.3.0",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.7.3",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "hono": "^4.0.0",
    "openai": "^6.16.0",
    "virtua": "^0.48.5"
  },
  "optionalDependencies": {
    "electron-liquid-glass": "^1.1.1"
  },
  "build": {
    "appId": "com.crow.app",
    "productName": "Crow",
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "ryne6",
      "repo": "Crow",
      "releaseType": "release"
    },
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage",
      "category": "Development"
    },
    "files": [
      "out/**/*",
      "package.json",
      "!out/**/*.map",
      "!out/**/*.d.ts",
      "!out/**/*.js.map",
      "!out/**/*.css.map"
    ],
    "extraResources": [
      {
        "from": "drizzle",
        "to": "drizzle"
      }
    ],
    "asarUnpack": [
      "**/node_modules/better-sqlite3/build/Release/*.node",
      "**/node_modules/better-sqlite3/build/Release/*.dylib"
    ],
    "afterPack": "./scripts/afterPack.js"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@lobehub/ui": "^4.35.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^20.3.9",
    "jsdom": "^24.1.3",
    "lucide-react": "^0.563.0",
    "msw": "^2.12.7",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "uuid": "^13.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18",
    "zustand": "^4.4.7"
  }
}
